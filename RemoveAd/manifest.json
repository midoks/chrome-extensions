{  
	"name": "移除广告",  
	"version": "0.0.1",  
	"manifest_version": 2,
	"description": "移除广告",

	"browser_action": {  
		"default_icon": "img/logo_off@16.png" ,
		"default_title": "移除广告"
		//"default_popup": "html/popup.html"
	},

	"icons": {"16": "img/logo@16.png", "48": "img/logo@48.png", "128": "img/logo@128.png"},

  	//权限管理
	"permissions": [
		"notifications",//消息
		"management",	//插件管理权限
		"tabs",    		//视窗
		"bookmarks",    //书签
		"cookies",		//cookie
		"http://*/",
		"unlimitedStorage",
		"background",	//后台运行
		"history",		//历史记录
		"chrome://favicon/",
		"contextMenus"	//右键菜单
	],

	//后台运行
	"background": { //"scripts": ["js/background.js"] 
		"page": "html/background.html"
	},

	"content_scripts": [
	    {
	     	"matches": ["http://*/*"],
	     	"js": ["js/removead.js"]
	    }
  	],


	"web_accessible_resources": [
		"img/logo.png"
	]
} 